const intro =
  'Hudson County clients scroll past generic salon feeds and book whoever feels premium. We fix the foundation FIRST—your website needs to take bookings, your Google profile needs proof, your Instagram needs to stop looking like stock photos. THEN we add AI that confirms appointments instantly and loyalty flows that bring clients back automatically.';

const painPoints = [
  {
    title: 'Your Instagram looks like everyone else\'s',
    description: 'Stock photos. Generic captions. Zero personality. Clients scroll past because they can\'t tell you apart from the salon in Newark or the one in Hoboken. You do better work—but they\'ll never know from your feed.',
  },
  {
    title: 'Booking is a nightmare for clients',
    description: 'They DM you at 9 PM asking for availability. You see it at 10 AM. By then they booked somewhere else. Your calendar is in a notebook. Your clients are using Instagram DMs like it\'s a booking system. It\'s not.',
    accent: 'green',
  },
  {
    title: 'Nobody leaves reviews, ever',
    description: 'You just gave someone the best balayage of their life. They love it. They post it on their story (without tagging you). They don\'t leave a review. Meanwhile your competitor with worse work has 94 5-star reviews. Guess who gets the next client?',
    accent: 'yellow',
  },
];

const playbook = [
  {
    title: 'Foundation Systems ($999/mo)',
    bullets: [
      'Website rebuilt with integrated booking, service menus, and real photos of your space and work.',
      'Google Business Profile optimized with before/after galleries, seasonal offers, and bilingual descriptions.',
      'Review engine deployed with QR cards and automated text requests after every appointment.',
    ],
    accent: 'pink',
  },
  {
    title: 'Foundation + Media Engine ($1,650/mo)',
    bullets: [
      'Everything in Foundation Systems, plus quarterly shoots capturing your space, team, and transformations.',
      'AI transforms one 90-minute session into 20-28 reels, stories, and posts monthly that feel like your brand, not stock footage.',
      'HudPost features showcase your work and community impact to 200K+ Hudson County readers.',
    ],
    accent: 'green',
  },
  {
    title: 'Foundation + Growth Engine ($2,750/mo)',
    bullets: [
      'Everything in Media Engine, plus AI Communications Engine with 6 supervised automation tools.',
      'AI concierge confirms appointments instantly, handles reschedules, upsells add-ons, and answers availability questions 24/7.',
      'Loyalty automations reward VIPs, win back lapsed clients, and promote new services—all human-monitored.',
    ],
    accent: 'yellow',
  },
  {
    title: 'Neighborhood Domination ($3,750/mo)',
    bullets: [
      'Everything in Growth Engine, plus guaranteed monthly HudPost beauty/lifestyle editorial features.',
      'Ad Engine targeting Hudson County clients searching for your services with intent to book.',
      'Priority capture schedule, influencer coordination, and SMS campaigns that keep your calendar full.',
    ],
    accent: 'pink',
  },
];

const proof = [
  {
    stat: 'Hoboken Hair Salon',
    description: 'Fully booked but average ticket $110. No upsells, no product sales, stylists too busy to mention treatments. After AI concierge + upsell automation: Average ticket increased to $178 (+62%), treatment add-ons suggested automatically, product sales 3x. Owner said: "The AI sells better than I do."',
  },
  {
    stat: 'Jersey City Boutique Studio',
    description: 'Incredible transformations but only 12 Google reviews total. Clients loved the work but never remembered to review. After review engine with QR cards + text automation: 147 new 5-star reviews in 120 days, #1 in Map Pack for "hair salon Jersey City," waitlist now 3 weeks out.',
  },
  {
    stat: 'Union City Barbershop',
    description: 'Great cuts, bad Instagram. 847 followers, posts got 20 likes. Clients found them on Google, not social. After quarterly shoots + AI content: Instagram reach grew 4.3x, DM bookings increased 212%, younger demographic discovering them, HudPost feature brought 40+ new clients.',
  },
  {
    stat: 'Bayonne Beauty Collective',
    description: 'Three stylists, one location, zero loyalty system. Clients came once, never returned. After loyalty automation + SMS campaigns: VIP rewards triggered automatically, lapsed client win-back flows, birthday promotions, product drop alerts. $96K additional quarterly revenue from repeat bookings alone.',
  },
];

const faq = [
  {
    question: 'How quickly can we schedule photo and video shoots?',
    answer:
      'We plan your first shoot during onboarding so you have new content within the first 30 days—capturing services, products, and behind-the-scenes culture.',
  },
  {
    question: 'Do you manage our booking and POS tools?',
    answer:
      'Yes. We integrate with Square, GlossGenius, Mindbody, Booker, and more to sync availability, confirmations, and loyalty automations into one flow.',
  },
  {
    question: 'Can you run bilingual campaigns for my clientele?',
    answer:
      'Absolutely. We craft bilingual content and automations, then train AI concierge responses so guests receive the same brand experience in either language.',
  },
