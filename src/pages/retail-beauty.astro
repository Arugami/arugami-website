  subtitle:
    'Your salon looks incredible in person. But your Instagram feels generic, your website doesn\'t take bookings, and happy clients forget to leave reviews. You\'re losing customers to competitors with worse work but better systems.',
  image: '/images/culture/culture-algorithm-lifestyle@2x.jpg',
  alt: 'Lifestyle shoot featuring Arugami-branded fashion accessories',
  stats: [
    { value: '+212%', label: 'Increase in booking inquiries after foundation rebuild' },
    { value: '147', label: 'New 5-star reviews in 120 days (Jersey City boutique)' },
    { value: '3x', label: 'Growth in repeat bookings via loyalty automation' },
  ],
  primaryCta: { href: '/contact', label: 'Schedule Your Foundation Audit' },
  secondaryCta: { href: '/contact', label: 'See What We\'d Fix First' },
