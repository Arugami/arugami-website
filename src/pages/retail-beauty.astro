const schema = {
  name: 'Arugami Retail & Beauty Growth System',
  description: hero.subtitle,
  serviceType: 'Retail and beauty marketing, HudPost media, loyalty automation',
  areaServed: 'Hudson County, NJ',
};

const closing = {
  title: 'Every empty chair is money you\'re never getting back.',
  subtitle: 'We can rebuild your foundation, launch your AI booking system, and have your calendar full before competitors figure out what Instagram algorithm changed this week. Foundation first. Bookings second. Waitlist third.',
  ctaLabel: 'Schedule Your Foundation Audit',
  ctaHref: '/contact',
};
---

<BaseLayout title={title} description={description} ogImage={hero.image}>
  <Header />
  <main class="bg-white text-arugami-dark">
    <ServicePage
      hero={hero}
      intro={intro}
      painPoints={painPoints}
      playbook={playbook}
      proof={proof}
      galleryImage="/images/culture/culture-rooftop-sofa-brick@2x.jpg"
      galleryAlt="Neon Arugami sofa setup with skyline backdrop"
      closing={closing}
      faq={faq}
      schema={schema}
    />
  </main>
  <Footer />
</BaseLayout>
