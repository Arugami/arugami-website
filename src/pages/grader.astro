        // Add competitor pins when competitors data arrives
        if (Array.isArray(data.competitors) && data.competitors.length) {
          const pinsContainer = document.getElementById('competitor-pins');
          if (pinsContainer && !pinsContainer.hasChildNodes()) {
            data.competitors.forEach((competitor, index) => {
              addCompetitorPin(competitor, index);
            });
          }
        }

        if (typeof data.score === 'number' && data.status === 'done') {
          const label = describeScore(data.score);
          resultHeadline.textContent = `${data.score}/100 — ${label}`;
          if (scoreMeter) {
            scoreMeter.textContent = data.score;
          }
          
          // Animate donut gauge
          const scoreArc = document.getElementById('score-arc');
          if (scoreArc) {
            const circumference = 2 * Math.PI * 50; // radius = 50
            const offset = circumference - (data.score / 100) * circumference;
            scoreArc.style.strokeDasharray = `${circumference} ${circumference}`;
            scoreArc.style.strokeDashoffset = offset;
          }
        }
        
        const breakdownData = data.scoreBreakdown || data.breakdown;
        if (breakdownData && scoreBreakdown) {
          const labelMap = {
            gbp: { label: 'Google Profile', color: 'bg-pink-400' },
            reviews: { label: 'Reviews & Reputation', color: 'bg-green-400' },
            photos: { label: 'Photos & Media', color: 'bg-blue-400' },
            performance: { label: 'Website Performance', color: 'bg-purple-400' },
            rankings: { label: 'Local Rankings', color: 'bg-amber-400' }
          };

          const entries = Array.isArray(breakdownData)
            ? breakdownData.map((item, index) => [`bucket-${index + 1}`, typeof item === 'number' ? item : item?.score ?? item])
            : Object.entries(breakdownData);

          scoreBreakdown.innerHTML = '';

          entries.forEach(([key, rawValue]) => {
            const numericValue = typeof rawValue === 'number' ? rawValue : Number.parseFloat(rawValue) || 0;
            const meta = labelMap[key] ?? {
              label: key.replace(/_/g, ' ').replace(/\b\w/g, (char) => char.toUpperCase()),
              color: 'bg-slate-500'
            };

            const row = document.createElement('div');
            row.className = 'flex items-center justify-between';

            const left = document.createElement('div');
            left.className = 'flex items-center gap-2';

            const dot = document.createElement('div');
            dot.className = `h-2 w-2 rounded-full ${meta.color}`;

            const label = document.createElement('span');
            label.className = 'text-slate-300';
            label.textContent = meta.label;

            const score = document.createElement('span');
            score.className = 'text-white font-medium';
            score.textContent = Math.round(numericValue).toString();

            left.append(dot, label);
            row.append(left, score);
            scoreBreakdown.appendChild(row);
          });
        }
      } catch (error) {
        console.error(error);
      }
    }

    if (usingFallbackApi) {
      console.log('No API base found, using fallback');
      // Don't show warning or disable form - let it work with fallback
      console.log('API base will use fallback URL:', apiBase);
    } else {
      console.log('API base configured:', apiBase);
    }

    async function startScan() {
      const finalApiBase = state.apiBase || FALLBACK_API_BASE;
      if (!finalApiBase) {
        console.log('No API base configured');
        showInlineError('We could not start your scan. API base missing.');
        return;
      }

      hideSuggestions(true);
      warning?.classList.add('hidden');
      const existingError = document.getElementById('grader-error');
      if (existingError) {
        existingError.textContent = '';
      }

      const businessName = businessInput?.value?.trim() ?? '';
      if (businessName.length < 2) {
        showInlineError('Please enter your restaurant name.');
        businessInput?.focus({ preventScroll: true });
        updateSubmitState('missing-name');
        return;
      }

      const placeId = state.selected?.placeId || state.placeId || placeIdInput?.value?.trim() || '';
      if (!placeId) {
        console.warn('[grader] blocked submit: missing placeId');
        showInlineError('Select your restaurant from the list so we can run the audit.');
        businessInput?.focus({ preventScroll: true });
        updateSubmitState('missing-place');
        return;
      }

      console.log('[grader] submit attempt', {
        businessName,
        placeId,
        captchaReady: state.disableVerification ? true : state.captchaReady
      });

      let captchaTokens = { recaptchaToken: null, turnstileToken: null };
      if (!state.disableVerification) {
        try {
          captchaTokens = await requestCaptchaToken();
        } catch (error) {
          console.error(error);
          const message = error?.message === 'missing-turnstile-token'
            ? 'Verify you’re human before running the audit.'
            : 'Could not load reCAPTCHA. Please refresh and try again.';
          state.captchaReady = false;
          showInlineError(message);
          updateSubmitState('missing-captcha');
          return;
        }
      }

      const payload = {
        placeId,
        businessName,
        source: 'grader-site'
      };

      if (!state.disableVerification) {
        if (captchaTokens.recaptchaToken) {
          payload.recaptchaToken = captchaTokens.recaptchaToken;
        }
        if (captchaTokens.turnstileToken) {
          payload.turnstileToken = captchaTokens.turnstileToken;
        }
      }

      state.isSubmitting = true;
      window.isSubmitting = true;
      updateSubmitState('submit-start');

      try {
        console.log('[grader] submitting scan for', { placeId, businessName });
        console.log('[grader] payload prepared', payload);
        const response = await fetch(`${finalApiBase}/api/scan/start`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(payload)
        });

        console.log('[grader] start response status', response.status);
        const responseText = await response.text();
        let responseBody = {};
        if (responseText) {
          try {
            responseBody = JSON.parse(responseText);
          } catch (error) {
            console.warn('Could not parse scan/start response JSON', error);
          }
        }

        if (!response.ok) {
          console.warn('[grader] start error', { status: response.status, error: responseBody });
          const detailed =
            formatValidationErrors(responseBody?.details) ||
            formatValidationErrors(responseBody?.errors);
          const fallbackMessage = responseBody?.error || `Start failed (${response.status})`;
          showInlineError(detailed || fallbackMessage);
          updateSubmitState('server-error');
          return;
        }

        scanId = responseBody.scanId ?? scanId;
        if (!scanId) {
          showInlineError('Start failed (missing scan id).');
          updateSubmitState('server-error');
          return;
        }
        const effectiveName = businessName || state.selectedLabel || 'Your restaurant';
        updateScanningQuery(effectiveName);
        warning?.classList.add('hidden');

        if (typeof window.forceShow === 'function') {
          try {
            window.forceShow('grader-progress');
          } catch (error) {
            console.warn('[grader] forceShow failed', error);
          }
        } else {
          document.getElementById('grader-progress')?.classList.remove('hidden');
        }

        toggle(intakeSection, false);
        toggle(progressSection, true);

        startScanTimer();
        markSteps('resolving');
        updateStatus('resolving');

        if (pollInterval) {
          clearInterval(pollInterval);
        }
        pollInterval = setInterval(() => pollStatus(scanId), 1000);
        await pollStatus(scanId);
      } catch (error) {
        console.error(error);
        showInlineError('Something went wrong starting the scan.');
      } finally {
        state.isSubmitting = false;
        window.isSubmitting = false;
        if (!state.disableVerification && turnstileSiteKey) {
          state.turnstileToken = '';
          state.captchaReady = false;
          if (window.turnstile && typeof window.turnstile.reset === 'function') {
            try {
              window.turnstile.reset();
            } catch (error) {
              console.warn('[grader] turnstile reset failed', error);
            }
          }
        }
        updateSubmitState('submit-end');
      }
    }

    let lastCtaClick = false;

    form?.addEventListener('submit', (event) => {
      event.preventDefault();
      if (lastCtaClick) {
        return;
      }
      startScan().catch((error) => {
        console.error(error);
        showInlineError('Something went wrong starting the scan.');
      });
    });

    ctaButton?.addEventListener('click', (event) => {
      event.preventDefault();
      const target = event.currentTarget;
      if (target instanceof HTMLElement && target.getAttribute('aria-disabled')) {
        return;
      }
      if (state.isSubmitting) {
        return;
      }
      lastCtaClick = true;
      Promise.resolve(startScan()).catch((error) => {
        console.error(error);
        showInlineError('Something went wrong starting the scan.');
      }).finally(() => {
        lastCtaClick = false;
      });
    });

    if (!disableVerification) {
      verifyForm?.addEventListener('submit', async (event) => {
        event.preventDefault();
        const finalApiBase = apiBase || FALLBACK_API_BASE;
        if (!finalApiBase || !scanId) return;
        verifyWarning.classList.add('hidden');

        const formData = new FormData(verifyForm);
        const phone = formData.get('phone');

        try {
          const res = await fetch(`${finalApiBase}/api/verify/start`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ scanId, phone })
          });

          if (!res.ok) {
            verifyWarning.textContent = 'We could not send the code. Double-check the number and try again.';
            verifyWarning.classList.remove('hidden');
            return;
          }

          currentPhone = phone;
          toggle(verifyCodeForm, true);
          verifyForm.querySelector('button')?.setAttribute('disabled', 'true');
        } catch (error) {
          console.error(error);
          verifyWarning.textContent = 'Something went wrong sending the code. Try again in a minute.';
          verifyWarning.classList.remove('hidden');
        }
      });

      verifyCodeForm?.addEventListener('submit', async (event) => {
        event.preventDefault();
        const finalApiBase = apiBase || FALLBACK_API_BASE;
        if (!finalApiBase || !scanId || !currentPhone) return;
        verifyWarning.classList.add('hidden');

        const formData = new FormData(verifyCodeForm);
        const code = formData.get('code');

        try {
          const res = await fetch(`${finalApiBase}/api/verify/check`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify({ scanId, phone: currentPhone, code })
          });

          if (!res.ok) {
            verifyWarning.textContent = res.status === 401 ? 'Code not recognized. Request a new code and try again.' : 'Verification failed. Try again shortly.';
            verifyWarning.classList.remove('hidden');
            return;
          }

          const data = await res.json();
          resultLink.href = data.reportUrl;
          hideUnlockModal();
          stopScanTimer();
          toggle(progressSection, false);
          toggle(verifySection, false);
          toggle(resultSection, true);
          if (resultSection) {
            resultSection.classList.remove('hidden');
            resultSection.style.display = resultSection.dataset?.defaultDisplay || 'block';
          }
          if (pollInterval) {
            clearInterval(pollInterval);
            pollInterval = null;
          }
        } catch (error) {
          console.error(error);
          verifyWarning.textContent = 'Unexpected error unlocking the report. Try again or contact us.';
          verifyWarning.classList.remove('hidden');
        }
      });
    }
    
    } catch (error) {
      console.error('JavaScript error in grader script:', error);
      console.error('Error stack:', error.stack);
    }
    };

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initGrader, { once: true });
    } else {
      initGrader();
    }
  </script>
</BaseLayout>
