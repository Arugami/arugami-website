const schema = {
  name: 'Arugami — Jersey City Growth Partner',
  description: intro,
  areaServed: 'Jersey City, NJ',
};

const closing = {
  title: 'Every PATH commuter comparing you to Manhattan is a customer you could win—or lose.',
  subtitle: 'We can rebuild your foundation, launch your AI receptionist, and have you looking premium before the next train arrives. Foundation first. Speed second. Local wins third.',
  ctaLabel: 'Schedule Your Foundation Audit',
  ctaHref: '/contact',
