  alt: 'Neon Arugami sofa overlooking the Manhattan skyline from Jersey City',
  stats: [
    { value: '+88%', label: 'Lift in signed contracts for Newark Ave law firm' },
    { value: '147', label: 'New 5-star reviews (Heights restaurant, 120 days)' },
    { value: '44s', label: 'Average response time with AI receptionist' },
