<BaseLayout title={title} description={description} ogImage={hero.image}>
  <Header />
  <main class="bg-white text-arugami-dark">
    <LocationPage
      hero={hero}
      intro={intro}
      neighborhoods={neighborhoods}
      strategy={strategy}
      proof={proof}
      galleryImage="/images/culture/culture-rooftop-sofa-front@2x.jpg"
      galleryAlt="Luxury lounge setup with Arugami branding overlooking skyline"
      closing={closing}
      faq={faq}
      schema={schema}
    />
