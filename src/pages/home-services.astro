};

const closing = {
  title: 'Every missed emergency call is $2,000+ you\'ll never see again.',
  subtitle: 'We can rebuild your foundation, launch your AI dispatcher, and have you capturing midnight emergencies before your competitors even check voicemail. Foundation first. Speed second. Domination third.',
  ctaLabel: 'Schedule Your Foundation Audit',
  ctaHref: '/contact',
