const neighborhoods = [
  { title: 'Tonnelle Avenue corridor', description: 'Industrial + automotive businesses need reputation management and quick inbound routing.' },
  { title: 'Bergenline & 74th Street', description: 'Retail and dining corridor benefitting from bilingual content and HudPost spotlighting.' },
  { title: 'North Bergen hilltop', description: 'Residential neighborhoods looking for trusted service providers and family-friendly messaging.' },
  { title: 'River Road', description: 'Commuter-heavy stretch needing polished digital experiences and speedy customer service.' },
];

const strategy = [
  {
    title: 'Foundation Systems ($999/mo)',
    bullets: [
      'Website rebuilt with service-specific landing pages (HVAC, plumbing, auto repair), bilingual CTAs, and mobile-first design for Tonnelle Avenue and hilltop customers.',
      'Google Business Profile optimized with industrial/residential keywords, before/after photos, and bilingual descriptions.',
      'Review engine deployed with QR codes and automated text requests targeting North Bergen neighborhoods.',
    ],
    accent: 'pink',
  },
  {
    title: 'Foundation + Media Engine ($1,650/mo)',
    bullets: [
      'Everything in Foundation Systems, plus quarterly shoots capturing your work sites, team, and completed projects across Tonnelle Avenue and hilltop neighborhoods.',
      'AI transforms one session into 20-28 pieces monthly—service showcases, job completion highlights, behind-the-scenes.',
      'Guaranteed monthly HudPost features highlighting your North Bergen roots, community involvement, and service expertise.',
    ],
    accent: 'green',
  },
  {
    title: 'Foundation + Growth Engine ($2,750/mo)',
    bullets: [
      'Everything in Media Engine, plus AI Communications Engine with 6 supervised automation tools.',
      'AI dispatcher handles emergency calls, estimates, and service inquiries 24/7, routes to correct team member instantly.',
      'Pipeline automations for follow-up, maintenance reminders, and service contract renewals—all human-monitored.',
    ],
    accent: 'yellow',
  },
  {
    title: 'Neighborhood Domination ($3,750/mo)',
    bullets: [
      'Everything in Growth Engine, plus guaranteed weekly HudPost coverage and industrial/residential partnership coordination.',
      'Ad Engine targeting North Bergen homeowners and Tonnelle Avenue businesses searching for your services right now.',
      'VIP contractor programs, seasonal campaigns, and priority capture scheduling across all North Bergen neighborhoods.',
    ],
    accent: 'pink',
  },
