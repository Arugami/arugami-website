const schema = {
  name: 'Arugami — North Bergen Growth Partner',
  description: intro,
  areaServed: 'North Bergen, NJ',
};

const closing = {
  title: 'Every homeowner who books the plumber across the street is $1,500+ you'll never see.',
  subtitle: 'We can rebuild your foundation, launch your AI dispatcher, and have Tonnelle Avenue and hilltop neighborhoods choosing you before the next emergency call. Foundation first. Speed second. Full trucks third.',
  ctaLabel: 'Schedule Your Foundation Audit',
  ctaHref: '/contact',
};
---

<BaseLayout title={title} description={description} ogImage={hero.image}>
  <Header />
  <main class="bg-white text-arugami-dark">
    <LocationPage
      hero={hero}
      intro={intro}
      neighborhoods={neighborhoods}
      strategy={strategy}
      proof={proof}
      galleryImage="/images/culture/culture-hudson-runs@2x.jpg"
      galleryAlt="North Bergen team captured in Arugami production"
      closing={closing}
      faq={faq}
      schema={schema}
    />
  </main>
  <Footer />
</BaseLayout>
